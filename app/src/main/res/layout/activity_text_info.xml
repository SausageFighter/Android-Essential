<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/sqr1"
                android:layout_width="@dimen/view_64"
                android:layout_height="@dimen/view_64"
                android:layout_marginLeft="@dimen/view_8"
                android:layout_marginTop="@dimen/view_8"
                android:background="@color/light_yellow" />

            <View
                android:id="@+id/sqr2"
                android:layout_width="@dimen/view_80"
                android:layout_height="@dimen/view_64"
                android:layout_marginTop="@dimen/view_8"
                android:layout_toRightOf="@id/sqr1"
                android:background="@android:color/white" />

            <View
                android:id="@+id/sqr3"
                android:layout_width="@dimen/view_64"
                android:layout_height="@dimen/view_64"
                android:layout_marginTop="@dimen/view_8"
                android:layout_toRightOf="@id/sqr2"
                android:background="@color/light_green" />

            <View
                android:id="@+id/sqr4"
                android:layout_width="@dimen/view_64"
                android:layout_height="@dimen/view_64"
                android:layout_marginTop="@dimen/view_8"
                android:layout_toRightOf="@id/sqr3"
                android:background="@color/light_blue" />

            <View
                android:id="@+id/sqr5"
                android:layout_width="@dimen/view_32"
                android:layout_height="@dimen/view_64"
                android:layout_marginTop="@dimen/view_8"
                android:layout_toRightOf="@id/sqr4"
                android:background="@android:color/white" />

            <View
                android:id="@+id/sqr6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/view_64"
                android:layout_marginTop="@dimen/view_8"
                android:layout_marginRight="@dimen/view_8"
                android:layout_toRightOf="@id/sqr5"
                android:background="@color/orange" />


            <TextView
                android:id="@+id/textview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_8"
                android:layout_marginTop="@dimen/view_88"
                android:layout_marginRight="@dimen/view_8"
                android:text="@string/long_text" />


            <TextView
                android:id="@+id/textview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview1"
                android:layout_marginLeft="@dimen/view_8"
                android:layout_marginRight="@dimen/view_8"
                android:paddingTop="@dimen/view_8"
                android:text="@string/long_text" />


            <TextView
                android:id="@+id/textview3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview2"
                android:layout_marginLeft="@dimen/view_8"
                android:layout_marginRight="@dimen/view_8"
                android:paddingTop="@dimen/view_8"
                android:text="@string/long_text" />

            <TextView
                android:id="@+id/textview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview3"
                android:layout_marginLeft="@dimen/view_8"
                android:layout_marginRight="@dimen/view_8"
                android:paddingTop="@dimen/view_8"
                android:text="@string/long_text" />

            <TextView
                android:id="@+id/textview5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview4"
                android:layout_marginLeft="@dimen/view_8"
                android:layout_marginRight="@dimen/view_8"
                android:paddingTop="@dimen/view_8"
                android:text="@string/long_text" />

        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>